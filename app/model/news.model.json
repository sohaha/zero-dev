{
    "$schema": "https://mock.apifox.cn/m1/1797702-0-default/_/schema-model#",
    "name": "新闻模型",
    "table": {
        "name": "news",
        "comment": "新闻表"
    },
    "columns": [
        {
            "label": "分类",
            "name": "category",
            "type": "int"
        },
        {
            "label": "标题",
            "name": "title",
            "size": 25,
            "type": "string"
        },
        {
            "name": "content",
            "type": "string",
            "label": "内容",
            "validations": [
                {
                    "method": "minLength",
                    "args": 3
                },
                {
                    "method": "maxLength",
                    "args": 9999
                }
            ]
        },
        {
            "name": "topic",
            "type": "json",
            "label": "话题"
        }
    ],
    "values": [
        {
            "id": 1,
            "category": 1,
            "title": "这是一条新闻标题",
            "topic": [
                1,
                2,
                3
            ],
            "content": "新闻内容：防疫快快过去了，大家都可以出去玩了"
        },
        {
            "category": 1,
            "topic": [
                3
            ],
            "title": "新闻标题",
            "content": "新闻内容：这是一条每次启动都会自动创建的新闻"
        }
    ],
    "relations": {
        "category": {
            "model": "category",
            "key": "category",
            "foreign": "id",
            "fields": [
                "category_name"
            ]
        },
        "belong_topic": {
            "type": "hasMany",
            "model": "topic",
            "key": "topic",
            "foreign": "id"
        }
    },
    "options": {
        "timestamps": true
    }
}